<div class="text-center">
    <h1 class="display-4">Click the button to choose a file</h1>

    <form asp-action="LongestWorkingPairOfEmployees" asp-controller="Home" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="btn btn-primary" for="my-file-selector">
                <input id="my-file-selector" type="file" name="file" style="display:none;" onchange="$('#submitButton').click();">
                Browse
            </label>
            <span class='label label-info' id="upload-file-info"></span>
        </div>
        <button id="submitButton" type="submit" class="btn btn-default"></button>
    </form>
</div>
